pipeline {
    agent {
        label any
    }
    tools {
        maven 'maven'
    }
    stages {
        stage('Get code'){
            steps {
                 git branch: 'master', url: 'https://github.com/mstr0m/addressbook.git'
            }
        }
        stage('Compile'){
            steps {
                 sh 'mvn compile'
            }
        }
        stage('Scan'){
            steps {
                 sh 'mvn -P metrics pmd:pmd'
            }
        }
        stage('Unit Test'){
            steps {
                 sh 'mvn test'
            }
        }
        stage('Package'){
            steps {
                 sh 'mvn package'
            }
        }
        stage('Archive'){
            steps {
                 archiveArtifacts artifacts: 'target/*.war', followSymlinks: false
            }
        }
        stage('Scan Report'){
            steps {
                 publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: 'target/site', reportFiles: 'pmd.html', reportName: 'Scan Report', reportTitles: ''])
            }
        }
    }
}
